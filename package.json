    "@orama/react-components": "^0.8.1",
    "@rollup/plugin-virtual": "^3.0.2",
    "acorn": "^8.15.0",
    "commander": "^14.0.0",
    "dedent": "^1.6.0",
    "eslint-plugin-react-x": "^1.52.8",
